<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".activities.McqExamResultActivity">

    <androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:elevation="@dimen/_6sdp"
        app:title=""
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/colorWhite"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:fontFamily="@font/kalpurush"
            android:textSize="@dimen/toolbar_text_title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="বহুনির্বাচনী পরীক্ষা"
            android:id="@+id/tv_subject_activity_toolbar_title"
            android:textColor="@color/colorWhite"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:src="@drawable/ic_exam_result"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                />

            <TextView
                android:textColor="@color/colorTextBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="কুইজ পরীক্ষার রেজাল্ট"
                android:textStyle="bold"
                android:textSize="@dimen/_24sdp"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                />

            <LinearLayout
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/kalpurush"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="দেশ কথা : প্রথম সেট"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableLeft="@drawable/ic_baseline_local_library_24"
                    android:id="@+id/tv_mcq_exam_result_chapter_name"
                    />

                <TextView
                    android:fontFamily="@font/kalpurush"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="সময়ঃ 29:00 মিনিট"
                    android:textStyle="bold"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:drawableLeft="@drawable/ic_baseline_timer_24"
                    android:id="@+id/tv_mcq_exam_result_time"
                    />

                <TextView
                    android:fontFamily="@font/kalpurush"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="উত্তর করেছেনঃ ৩০ "
                    android:textStyle="bold"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
                    android:id="@+id/tv_mcq_exam_result_answered_question"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:fontFamily="@font/kalpurush"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="সঠিকঃ ৩০ "
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableLeft="@drawable/ic_baseline_check_circle_24"
                        android:id="@+id/tv_mcq_exam_result_currect"
                        />
                    <TextView
                        android:layout_weight="1"
                        android:fontFamily="@font/kalpurush"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ভুলঃ ৩০"
                        android:textStyle="bold"
                        android:drawablePadding="@dimen/_10sdp"
                        android:textSize="@dimen/_16sdp"
                        android:drawableLeft="@drawable/ic_baseline_cancel_24"
                        android:id="@+id/tv_mcq_exam_result_wrong"
                        />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_margin="@dimen/_7sdp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:foreground="?selectableItemBackground"
                android:textStyle="bold"
                android:background="@color/colorPrimary"
                android:id="@+id/btn_mcq_exam_result_home_page"
                android:text="হোম পেজে যান"/>

        </LinearLayout>






    </androidx.cardview.widget.CardView>

</LinearLayout>