<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/BanglaTextViewStyle</item>
        <item name="android:buttonStyle">@style/BanglaButtonStyle</item>
        <item name="android:editTextStyle">@style/BanglaEditTextStyle</item>
    </style>

    <style name="RegistrationTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:textViewStyle">@style/BanglaTextViewStyle</item>
        <item name="android:buttonStyle">@style/BanglaButtonStyle</item>
        <item name="android:editTextStyle">@style/BanglaEditTextStyle</item>
    </style>

    <style name="BanglaTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/kalpurush</item>
    </style>

    <style name="BanglaButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/kalpurush</item>
    </style>

    <style name="BanglaEditTextStyle" parent="android:Widget.Material.EditText">
        <item name="android:fontFamily">@font/kalpurush</item>
    </style>


    <style name="AuthTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>


    <style name="AuthButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/kalpurush</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:background">@drawable/auth_sign_up_button_bg</item>
    </style>

    <style name="MoreButtonTheme">
        <item name="android:fontFamily">@font/kalpurush</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:background">@drawable/more_buttons_bg</item>
    </style>

    <style name="McqOptionTextTheme">

        <item name="android:fontFamily">@font/kalpurush</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">#3E3939</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
    </style>


</resources>